<h2>Create Rental Request</h2>

<form class="" action="<%= cat_rental_requests_url %>" method="post">
  <label for="cat">Select Cat</label>
  <select id="cat" name="cat_rental_request[cat_id]">
    <option disabled  <%= @cat_id.nil? ? "selected" : "" %>>--Select Cat--</option>
    <% @cats.each do |cat| %>
      <option value="<%= cat.id %>" <%= (cat.id == @cat_id) ? "selected" : "" %>><%= cat.name %></option>
    <% end %>
  </select>
  <br>
  <label for="start_date">Start Date</label>
  <input id="start_date" type="date" name="cat_rental_request[start_date]" value="">
  <br>
  <label for="end_date">End Date</label>
  <input id="end_date" type="date" name="cat_rental_request[end_date]" value="">
  <br>
  <input type="submit" name="" value="Create Request">
</form>
