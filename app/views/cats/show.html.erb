<h4>Cat Details</h4>
<%= render "display", cat: @cat, page: "cat" %>

<form class="" action="<%= new_cat_rental_request_url %>" method="get">
    <input type="hidden" name="cat_id" value="<%= @cat.id %>">
    <input type="submit" name="" value="Make Rental Request">
</form>

<h4>Rental Requests</h4>
<table>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
    <th>Approve</th>
  </tr>
  <% @cat_requests.each do |request| %>
  <tr>
    <td> <%= request.start_date %> </td>
    <td> <%= request.end_date %> </td>
    <td> <%= request.status %> </td>
    <td> <%= button_to "Approve", cat_rental_request_url(request),
    method: "post", :disabled => (request.status == "APPROVED" || request.status == "DENIED") %> </td>
  </tr>
  <% end %>
</table>
